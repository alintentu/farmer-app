{
    "name": "atlas/api",
    "type": "project",
    "description": "Atlas SaaS Platform - Laravel Backend",
    "keywords": ["laravel", "saas", "multi-tenant", "api"],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "laravel/framework": "^11.0",
        "laravel/sanctum": "^4.0",
        "laravel/cashier": "^15.0",
        "laravel/scout": "^11.0",
        "meilisearch/meilisearch-php": "^1.0",
        "spatie/laravel-permission": "^6.0",
        "spatie/laravel-activitylog": "^4.10",
        "spatie/laravel-backup": "^8.0",
        "spatie/laravel-query-builder": "^5.0",
        "spatie/laravel-ray": "^1.0",
        "barryvdh/laravel-debugbar": "^3.0",
        "nunomaduro/collision": "^8.0",
        "nunomaduro/larastan": "^2.0",
        "phpunit/phpunit": "^11.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "fakerphp/faker": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "smalot/pdfparser": "^2.9"
    },
    "suggest": {
        "smalot/pdfparser": "^2.9 for PDF text extraction",
        "ext-imagick": "For image extraction from PDFs"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "laravel/telescope": "^5.0",
        "nunomaduro/phpinsights": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"if (file_exists('artisan')) { passthru('php artisan package:discover --ansi'); }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists('artisan')) { passthru('php artisan vendor:publish --tag=laravel-assets --ansi --force'); }\""
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"if (file_exists('artisan')) { passthru('php artisan key:generate --ansi'); }\""
        ],
        "test": [
            "@php -r \"if (file_exists('artisan')) { passthru('php artisan test'); } else { echo 'No artisan; skipping tests.\\n'; }\""
        ],
        "test-coverage": [
            "@php -r \"if (file_exists('artisan')) { passthru('php artisan test --coverage'); } else { echo 'No artisan; skipping tests.\\n'; }\""
        ],
        "analyse": [
            "@php vendor/bin/phpstan analyse"
        ],
        "format": [
            "@php vendor/bin/pint"
        ],
        "insights": [
            "@php vendor/bin/phpinsights"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
